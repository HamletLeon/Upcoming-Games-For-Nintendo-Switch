<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_cover_art"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/image_cover_art"
            android:layout_toRightOf="@+id/image_cover_art">

            <TextView
                android:id="@+id/text_no_of_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_coming_date"
                android:layout_centerHorizontal="true"
                android:text="No. Players: 8 players "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="ARMS"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="$9.99" />

            <TextView
                android:id="@+id/text_coming_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Comming:  Mar 16, 2017"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_physical_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_coming_date"
                android:layout_centerHorizontal="true"
                android:text="@string/physical_release"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_days_to_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_no_of_players"
                android:layout_centerHorizontal="true"
                android:text="14 days to release"
                android:textStyle="bold" />

        </RelativeLayout>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image_cover_art"
            android:layout_toRightOf="@+id/image_cover_art"
            android:button="@drawable/check"
            android:background="@null"
            android:visibility="gone"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>